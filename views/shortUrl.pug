doctype html
html
		head
				meta(charset='UTF-8')
				meta(name="viewport" content="width=device-width, initial-scale=1")
				title Url shortener
				script.
						function copyText () {
								const textArea = document.getElementById("shortUrl")
								textArea.select()
								textArea.setSelectionRange(0, 99999)
								document.execCommand('copy')
								alert("copied url:" + textArea.value)
						}
		body
				center
						h1 URL SHORTENER
						div(style="display: flex; justify-items: center; justify-content: center;")
								label(for="shortUrl")
								textarea#shortUrl(style="width: 50%; height: 44px") #{shortUrl}
								button(style="height: 50px; background-color: lightblue" onclick="copyText()") copy text
